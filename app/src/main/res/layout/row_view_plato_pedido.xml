<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:id="@+id/img_foto_plato"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        android:src="@drawable/brownnie"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_foto_plato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_nombre_plato"
            android:text="Nombre de plato"
            android:textSize="10pt"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@id/img_foto_plato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/container_info"
            android:layout_toRightOf="@id/img_foto_plato"
            android:layout_below="@id/txt_nombre_plato"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_price_tag"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/txt_cantidad_plato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:maxLines="1"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_price"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/txt_precio_plato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.00 â‚¬"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_notas_plato"
            android:layout_toRightOf="@id/img_foto_plato"
            android:layout_below="@id/container_info"
            android:text="xxxx xxxx xxxx xxxx xxxxx xxxxx xxx Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato "
            android:textColor="#9D9D9D"
            android:ellipsize="end"
            android:maxLines="4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </RelativeLayout>
</RelativeLayout>