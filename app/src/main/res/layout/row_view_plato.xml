<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
    <ImageView
        android:id="@+id/img_plato"
        android:layout_width="110dp"
        android:layout_height="110dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_nombre_plato"
            android:text="Nombre de plato"
            android:textSize="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/container_notas_plato"
            android:orientation="horizontal"
            android:layout_below="@id/txt_nombre_plato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_icono_notes"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/txt_notas_plato"
                android:text="Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato Notas de plato "
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/container_notas_plato"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icono_alergeno_gluten"
                android:src="@drawable/ic_icono_alergeno_gluten"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/icono_alergeno_frutos_cascara"
                android:src="@drawable/ic_icono_alergeno_frutos_cascara"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/icono_alergeno_lacteos"
                android:src="@drawable/ic_icono_alergeno_lacteos"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/icono_alergeno_huevo"
                android:src="@drawable/ic_icono_alergeno_huevo"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>